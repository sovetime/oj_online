<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.ojfriend.mapper.user.UserSubmitMapper">
    <select id="selectCurrentUserSubmit" resultType="org.example.ojfriend.domain.user.UserSubmit">
        SELECT
            submit_id,
            pass,
            exe_message,
            case_judge_res
        FROM
            tb_user_submit
        <where>
            <if test="questionId != null">
                AND question_id = #{questionId}
            </if>
            <if test="examId !=null ">
                AND exam_id = #{examId}
            </if>
            <if test="examId == null ">
                AND exam_id is null
            </if>
            <if test="userId !=null ">
                AND user_id = #{userId}
            </if>
            <if test="currentTime !=null and currentTime !='' ">
                AND (create_time &gt;= #{currentTime} or update_time &gt;= #{currentTime})
            </if>
        </where>

    </select>

</mapper>